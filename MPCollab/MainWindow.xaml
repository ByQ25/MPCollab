        <Button x:Name="buttonHost" Content="Hostuj" HorizontalAlignment="Left" Margin="40,79,0,0" VerticalAlignment="Top" Width="75" Click="buttonHost_Click"/>
        <Button x:Name="buttonClient" Content="Połącz" HorizontalAlignment="Left" Margin="141,79,0,0" VerticalAlignment="Top" Width="75" Click="buttonClient_Click"/>

    </Grid>
</Window>
